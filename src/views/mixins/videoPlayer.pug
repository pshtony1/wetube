mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=video.src, autoplay)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-pause
                div#volume-container
                    span#jsVolumeButton
                        i.fas.fa-volume-down
                    input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.01", value="0.6")
                span#time-container
                    span#currentTime 00:00
                    |/
                    span#totalTime 00:00
            .videoPlayer__column
                span#jsFullScreenBtn
                    i.fas.fa-expand