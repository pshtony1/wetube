extends layouts/main

block content
    .form-container.user-edit-form
        form(action=`/users${routes.editProfile}`, method="post", enctype="multipart/form-data")
            label.not-uploaded#avatarLabel(for="avatar")
                i.far.fa-images#avatarLabelIcon
                span#avatarLabelSpan Upload Your Avatar
            input(type="file", id="avatar", name="avatar", accept="image/*")
            input#changeName(type="text", placeholder="Name", name="name", value=user.name)
            input(type="email", placeholder="Email", name="email", value=user.email)
            input(type="submit", value="Update Profile")

        a.form-container__link--change-password(href=routes.users + routes.changePassword) Change Password